{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": [
      "es2018",
      "WebWorker"
    ],
    "paths": {
      "$src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
