{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "WebWorker",
      "dom.iterable"
    ],
    "paths": {
      "$src/*": ["./src/*"]
    },
  },
  "include": ["src/**/*"]
}
